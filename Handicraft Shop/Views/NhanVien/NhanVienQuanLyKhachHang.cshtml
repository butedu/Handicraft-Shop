@model List<Handicraft_Shop.Models.KHACHHANG>
@{
    ViewBag.Title = "NhanVienQuanLyKhachHang";
    Layout = "~/Views/Shared/NhanVienLayout.cshtml";
}

@section Styles {
    <style>
        /* Căn giữa tiêu đề và thêm khoảng cách */
        h2 {
            text-align: center;
            color: #6d4c41; /* Màu nâu đậm phù hợp với layout */
            font-weight: bold;
            margin-bottom: 20px;
        }

        /* Căn chỉnh form trong container để dễ nhìn hơn */
        .manage-users-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9; /* Màu nền nhẹ */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Thêm đổ bóng */
        }

        /* Tùy chỉnh bảng */
        .custom-table {
            border-collapse: collapse;
            width: 100%;
        }

            .custom-table th,
            .custom-table td {
                padding: 12px 15px;
                border: 1px solid #ddd;
            }

            .custom-table thead {
                background-color: #3e2723; /* Màu nâu đậm */
                color: white;
                font-weight: bold;
            }

            .custom-table tbody tr:nth-child(even) {
                background-color: #f2f2f2; /* Màu nền nhẹ cho hàng chẵn */
            }

            .custom-table tbody tr:hover {
                background-color: #e0f7fa; /* Màu nền khi hover */
            }

        /* Tùy chỉnh tiêu đề và bảng */
        .text-center {
            color: #5d4037; /* Màu nâu nhạt */
        }
    </style>
}

<div class="manage-users-container mt-5">
    <h2 class="text-center">Danh sách khách hàng</h2>

    <div class="table-responsive">
        <table class="table table-bordered table-hover custom-table">
            <thead>
                <tr>
                    <th>Mã khách hàng</th>
                    <th>Tên khách hàng</th>
                    <th>Số điện thoại</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.MAKHACHHANG</td>
                        <td>@user.HOTEN</td>
                        <td>@user.SODIENTHOAI</td>
                        <td>@user.EMAIL</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
