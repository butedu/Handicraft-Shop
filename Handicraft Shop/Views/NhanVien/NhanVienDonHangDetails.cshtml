
@{
    ViewBag.Title = "NhanVienDonHangDetails";
    Layout = "~/Views/Shared/NhanVienLayout.cshtml";
}

@model Handicraft_Shop.Models.DONHANG
@section Styles {
    <style>
        /* Tiêu đề trang */
        h2 {
            text-align: center;
            color: #5d4037; /* Màu nâu nhẹ */
            font-weight: bold;
            font-size: 26px; /* Kích thước lớn hơn cho tiêu đề */
            margin-top: 30px; /* Tạo khoảng cách với header */
            margin-bottom: 20px;
        }

        /* Thông tin đơn hàng */
        .order-info {
            background-color: #f5f5f5; /* Nền xám rất nhạt */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Đổ bóng nhẹ */
            font-size: 16px;
            line-height: 1.6;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
            text-align: left;
            margin-top: 20px; /* Tạo khoảng cách với tiêu đề */
        }

            .order-info h4 {
                color: #6d4c41;
                font-weight: bold;
                font-size: 20px;
                text-align: center;
                margin-bottom: 20px;
            }

            .order-info p {
                color: #424242;
                margin: 5px 0;
            }

                .order-info p strong {
                    color: #6d4c41;
                }

        /* Bảng danh sách sản phẩm */
        .table-title {
            text-align: center;
            color: #5d4037; /* Màu nâu nhẹ */
            font-size: 20px;
            font-weight: bold;
            margin-top: 30px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 8px;
            overflow: hidden;
            font-size: 15px;
            background-color: #ffffff;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Đổ bóng nhẹ */
        }

            .table thead {
                background-color: #a1887f; /* Màu nâu nhạt */
                color: #ffffff;
            }

            .table th, .table td {
                padding: 12px;
                text-align: center;
                border: 1px solid #ddd;
            }

            .table tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .table tbody tr:hover {
                background-color: #e0f2f1;
            }

        /* Nút Quay lại */
        .btn-secondary {
            background-color: #a1887f;
            color: white;
            border: none;
            padding: 8px 16px;
            font-size: 14px;
            font-weight: 500;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn-secondary:hover {
                background-color: #8d6e63;
            }

        /* Căn lề cho nút và tiêu đề bảng */
        .button-container {
            text-align: center;
            margin-top: 20px;
        }
    </style>
}


<!-- Sử dụng các class vừa tạo -->
<div class="order-info">
    <h4>Thông tin đơn hàng</h4>
    <p><strong>Mã đơn hàng:</strong> @Model.MADONHANG</p>
    <p><strong>Khách hàng:</strong> @Model.KHACHHANG.HOTEN</p>
    <p><strong>Ngày đặt:</strong> @Model.NGAYDAT</p>
    <p><strong>Hình thức thanh toán:</strong> @ViewBag.HinhThucThanhToan</p>
    <p><strong>Địa chỉ giao hàng:</strong> @Model.DIACHI_GIAOHANG.DIACHI</p>
    <p><strong>Tổng số lượng:</strong> @Model.TONGSLHANG</p>
    <p><strong>Tổng thành tiền:</strong> @String.Format("{0:N0}", Model.TONGTHANHTIEN) VNĐ</p>
    <p><strong>Trạng thái:</strong> @Model.TRANGTHAI</p>
</div>

<h4 class="table-title">Danh sách sản phẩm</h4>
<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.ChiTietDonHang)
        {
            <tr>
                <td>@item.SANPHAM.TENSANPHAM</td>
                <td>@item.SOLUONG</td>
                <td>@String.Format("{0:N0}", item.DONGIA) VNĐ</td>
                <td>@String.Format("{0:N0}", item.SOLUONG * item.DONGIA) VNĐ</td>
            </tr>
        }
    </tbody>
</table>

<div class="button-container">
    <a href="@Url.Action("NhanVienQuanLyDonHang", "NhanVien")" class="btn btn-secondary">Quay lại</a>
</div>
