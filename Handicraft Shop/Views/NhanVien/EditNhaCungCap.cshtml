@model Handicraft_Shop.Models.NHACUNGCAP
@{
    ViewBag.Title = "EditNhaCungCap";
    Layout = "~/Views/Shared/NhanVienLayout.cshtml";
}

@section Styles {
    <style>
        /* CSS cho form Sửa Nhà Cung Cấp */
        .container h2 {
            text-align: center;
            color: #6d4c41; /* Màu nâu đậm phù hợp với layout */
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-group label {
            font-weight: 600;
            color: #5d4037; /* Màu nâu đậm cho nhãn */
        }

        .form-control {
            border: 1px solid #8d6e63; /* Viền màu nâu nhạt */
            padding: 10px;
            font-size: 1em;
        }

            .form-control:focus {
                border-color: #6d4c41; /* Đổi màu viền khi focus */
                box-shadow: none; /* Loại bỏ bóng */
            }

        /* Nút Lưu Thay Đổi và Quay lại */
        .btn-primary {
            background-color: #6d4c41; /* Màu nâu đậm */
            border: none;
            color: white;
            font-weight: bold;
            padding: 10px 20px;
        }

            .btn-primary:hover {
                background-color: #5d4037; /* Màu đậm hơn khi hover */
                transition: background-color 0.2s ease;
            }

        .btn-secondary {
            background-color: #a1887f; /* Màu nâu nhạt cho nút Quay lại */
            border: none;
            color: white;
            font-weight: bold;
            padding: 10px 20px;
        }

            .btn-secondary:hover {
                background-color: #8d6e63; /* Màu đậm hơn khi hover */
                transition: background-color 0.2s ease;
            }
    </style>
}

<div class="container mt-4">
    <h2>Sửa Nhà Cung Cấp</h2>

    @using (Html.BeginForm("EditNhaCungCap", "NhanVien", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.MANHACUNGCAP)

        <div class="form-group">
            <label for="TENNHACUNGCAP">Tên Nhà Cung Cấp</label>
            @Html.TextBoxFor(m => m.TENNHACUNGCAP, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label for="DTHOAI">Điện Thoại</label>
            @Html.TextBoxFor(m => m.DTHOAI, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label for="DIACHI">Địa Chỉ</label>
            @Html.TextBoxFor(m => m.DIACHI, new { @class = "form-control", required = "required" })
        </div>

        <button type="submit" class="btn btn-primary mt-3">Lưu Thay Đổi</button>
        <a href="@Url.Action("NhanVienQuanLyNhaCungCap", "NhanVien")" class="btn btn-secondary mt-3">Quay lại</a>
    }
</div>
