
@using Handicraft_Shop.Models;
@model List<LOAI>

@foreach (var l in Model)
{
    <a class="dropdown-item" href="/Home/LocDL_Theoloai/?mdm=@l.MALOAI">@l.TENLOAI</a>
}

<script>
        function addToCartAjaxIndex(productId) {
            // Bước 1: Kiểm tra số lượng tồn
            $.ajax({
                url: '/Home/KiemTraSanPhamHetHang',
                type: 'POST',
                data: { MASANPHAM: productId },
                success: function (response) {
                    if (response.success) {
                        // Nếu còn hàng, gọi action thêm vào giỏ hàng
                        $.ajax({
                            url: '/Home/ThemMatHangAjax',
                            type: 'POST',
                            data: { MASANPHAM: productId },
                            success: function (addResponse) {
                                if (addResponse.success) {
                                    $('.cart-icon + .badge').text(addResponse.cartCount);

                                } else {
                                    alert(addResponse.message);
                                }
                            },
                            error: function () {
                                alert("Lỗi khi thêm sản phẩm vào giỏ hàng.");
                            }
                        });
                    } else {
                        // Nếu hết hàng, hiển thị thông báo
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("Lỗi khi kiểm tra trạng thái sản phẩm.");
                }
            });
        }
</script>
